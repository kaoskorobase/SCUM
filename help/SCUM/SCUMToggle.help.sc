// ---------------------------------------------------------------------
// SCUMToggle : SCUMControl
// ---------------------------------------------------------------------
//
// Toggle button.
//
// see also: SCUMBang, SCUMButton, SCUMChoice.
//
// ---------------------------------------------------------------------
// examples
// ---------------------------------------------------------------------

(
	w = SCUMWindow.new {
		~padding = 15;
		~children = {
			SCUMToggle.make {
				~minSize = 30;
				~action = { |v| v.value.if("on", "off").postln };
			}
		}
	};
	w.show;
)

